@model GraParagrafowa.Models.Story

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa Historii:
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            Ilośc bloków w historii:
        </dt>
        <dd class = "col-sm-10">
            @Model.HistoryBlocks.Count
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
